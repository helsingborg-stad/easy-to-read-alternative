{
    "name": "helsingborg-stad/easy-to-read-alternative",
    "description": "Adds easy to read alternative content version.",
    "license": "MIT",
    "type": "wordpress-plugin",
    "authors": [
        {
            "name": "Jonatan Hanson",
            "email": "jonatan.hanson@hiq.se"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/helsingborg-stad/acf-export-manager.git"
        }
    ],
    "require": {
        "helsingborg-stad/acf-export-manager": ">=1.0.0"
    },
    "extra" : {
        "builder": {
            "commands": [
                "composer install --prefer-dist --no-progress"
            ],
            "removables": [
                ".git",
                ".gitignore",
                ".github",
                "build.php",
                "composer.json",
                "composer.lock"
            ]
        }
    }
}
